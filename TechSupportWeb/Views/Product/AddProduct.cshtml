@model  TechSupportWeb.Models.Product

@using (Html.BeginForm("AddProduct", "Product", FormMethod.Post))
{

    <div class="row">
        <div class="col-md-6">
            <h5>Product Code</h5>
            @Html.TextBoxFor(i => i.ProductCode, new { @class = "form-control", @placeholder = "Product Code..." })
        </div>
        <div class="col-md-6">
            <h5>Product Name</h5>
            @Html.TextBoxFor(i => i.Name, new { @class = "form-control", @placeholder = "Product Name..." })
        </div>
        <div class="col-md-6">
            <h5>Product Version</h5>
            @Html.TextBoxFor(i => i.Version, new { @class = "form-control", @placeholder = "Product Version..." })
        </div>
        <div class="col-md-6">
            <h5>Release Date</h5>
            @Html.TextBoxFor(i => i.ReleaseDate, new { @class = "form-control", @placeholder = "Release Date..." })
        </div>
    </div>

<div class="row">
    <div class="col-md-12">
        <input type="submit" value="Submit" />
    </div>
</div>
}
