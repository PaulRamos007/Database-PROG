@model List<TechSupportWeb.Models.Technician>


<div class="row">
    <div class="col-md-12">
        <h2>List of Technicians</h2>
    </div>
</div>

@using (Html.BeginForm("TechnicianList", "Technician", FormMethod.Get))
{
    <div class="row">
        <div class="col-md-12">
            <input type="text" placeholder="Search..." name="searchTerm" id="searchTerm" />
        </div>
        <div class="col-md-12">
            <input type="submit" value="Submit" />
        </div>
    </div>
}

<div class="col-md-12">
    @Html.ActionLink("Add New Technician", "AddTech", "Technician", null, null)
</div>


<div class="row">
    <div class="col-md-12">
        <table id="customers" class="table table-dark">
            <thead>
                <tr>
                    <th scope="col">Tech ID</th>
                    <th scope="col">Tech Name</th>
                    <th scope="col">Email</th>
                    <th scope="col">Phone</th>
                    <th scope="col">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var tech in Model)
                {
                    <tr>
                        <td scope="row">@tech.TechID</td>
                        <td scope="row">@tech.Name</td>
                        <td scope="row">@tech.Email</td>
                        <td scope="row">@tech.Phone</td>
                        <td>
                            @Html.ActionLink("Edit", "AddTech", "Technician", new { id = tech.TechID }, null) |
                            @Html.ActionLink("Delete", "Delete", "Technician", new { id = tech.TechID }, null)
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>