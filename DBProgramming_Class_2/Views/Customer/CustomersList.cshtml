@model List<DBProgramming_Class_2.Models.Customer>

@{
    ViewBag.Title = "Customers List";
}

<link rel="stylesheet" href="~/Content/main.css" />

<div class="row">
    <div class="col-md-12">
        <h2>List of Customers</h2>
    </div>
</div>

@using (Html.BeginForm("CustomersList", "Customer", FormMethod.Get))
{
<div class="row">
    <div class="col-md-12">
        <input type="text" placeholder="Search..." name="searchTerm" id="searchTerm" />
    </div>
    <div class="col-md-12">
        <input type="submit" value="Submit" />
    </div>
    <div class="col-md-12">
        @Html.ActionLink("Add New Customer", "AddCustomer", "Customer", null, null)
    </div>
</div>
}


<div class="row">
    <div class="col-md-12">
        <table id="customers" class="table table-dark">
            <thead>
                <tr>
                    <th scope="col">Customer ID</th>
                    <th scope="col">Customer Name</th>
                    <th scope="col">Address</th>
                    <th scope="col">City</th>
                    <th scope="col">State</th>
                    <th scope="col">ZipCode</th>
                </tr>
            </thead>
            <tbody>
                    @foreach (var customer in Model)
                    {
                        <tr>
                            <td scope="row">@customer.CustomerID</td>
                            <td scope="row">@customer.Name</td>
                            <td scope="row">@customer.Address</td>
                            <td scope="row">@customer.City</td>
                            <td scope="row">@customer.State</td>
                            <td scope="row">@customer.ZipCode</td>
                            <td>
                                @Html.ActionLink("Edit", "AddCustomer", "Customer", new { id = customer.CustomerID }, null) |
                                @Html.ActionLink("Delete", "Delete", "Customer", new { id = customer.CustomerID }, null)
                            </td>
                        </tr>
                    }
            </tbody>
        </table>
    </div>
</div>

